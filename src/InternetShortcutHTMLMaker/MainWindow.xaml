<Window x:Class="InternetShortcutHTMLMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternetShortcutHTMLMaker"
        mc:Ignorable="d"
        Title="インターネットショートカット→HTMLリンク集" Height="300" Width="400" WindowStyle="ToolWindow">
    <Grid>
        <Border
            Background="#FFCAFFFF" 
            AllowDrop="True" 
            Drop="Border_Drop" 
            PreviewDragOver="Border_PreviewDragOver">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center">
                    ここにインターネットショートカットファイルを<LineBreak/>
                    ドラッグ＆ドロップしてください。<LineBreak/>
                    デスクトップにHTMLのショートカット集が作成されます。
            </TextBlock>
        </Border>
    </Grid>
</Window>
